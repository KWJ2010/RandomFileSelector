<Window x:Class="RandomFileSelector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomFileSelector"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525"
        >
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="This is a textblock"/>
            <TextBox Text="{Binding Path=SourcePath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <Label Content="{Binding Path=DestinationPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Foreground="Black" FontSize="48"/>
        </StackPanel>
    </Grid>
</Window>
